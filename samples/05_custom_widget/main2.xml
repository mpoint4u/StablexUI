<?xml version="1.0" encoding="utf-8" ?>
<VBox padding="20" childPadding="20">
	<HBox childPadding="10">
   		<ColorWidget color="0x0000FF" h="100" id="'custom'" w="200"></ColorWidget>
   		<Button text="'set random color'" skin:Paint-color="0x50FF40" 
   			on-click=" 	#ColorWidget(custom).color = Std.random(0xFFFFFF); 
   					#custom.refresh();     " 
   					/>
	</HBox>
	<HBox childPadding="10">
   		<ColorWidget color="0x0000FF" h="100" id="'custom2'" w="200"></ColorWidget>
   		<Button text="'set random color'" skin:Paint-color="0x00FF40" 
   			on-click="	#ColorWidget(custom2).color = Std.random(0xFFFFFF); 
   					#custom2.refresh();"
   					/>
	</HBox>
	<HBox childPadding="15">
		<ColorWidget color="0x0000FF" h="100" id="'custom3'" w="100"></ColorWidget>
		<Button text="'set third widget bg-color'" skin:Paint-color="0xFFFFFF" on-click="
			#ColorWidget(custom3).color = Std.random(0xFFFFFF);
			#custom3.refresh();
			"/>
	</HBox>
</VBox>
